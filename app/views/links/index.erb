<h1>Links</h1>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%=link.title%>
      URL: <%=link.url%>
      Tags: <%=link.tags.map(&:name)%>
    </li>
    <%end%>
</ul>

<form action='/links/new' method='get'>
  <button type="submit" name="save1" value="save">Save a new link</button>
</form>
